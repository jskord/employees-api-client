<h1>New employee</h1>
<%= form_tag "/employees", method: :post do %>
  <div>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name %>
  </div>
  <div>
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name %>
  </div>
  <div>
    <%= label_tag :birth_date %>
    <%= text_field_tag :birth_date %>
  </div>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <%= submit_tag "Create employee!" %>
<% end %>